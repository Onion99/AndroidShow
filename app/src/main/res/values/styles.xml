<?xml version="1.0" encoding="utf-8"?>
<!-- 定义子样式 -->
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="ThemeParent.Dark">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="md_button_casing">literal</item>
    </style>

    <style name="AppPlexTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">@color/plex_colorPrimary</item>
        <item name="colorPrimaryDark">@color/plex_colorPrimaryDark</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="mediaRouteButtonTint">@color/grey_11</item>
        <item name="alertDialogTheme">@style/AppThemeDialog</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>


    <style name="AppTheme.Custom" parent="ThemeParent.Dark">
        <item name="colorPrimary">@color/primary_custom</item>
        <item name="colorPrimaryDark">@color/primaryDark_custom</item>
        <item name="colorAccent">@color/accent_custom</item>

        <!-- Dialog 主题设置 -->
        <item name="md_corner_radius">16dp</item>
        <item name="md_font_title">@font/raleway_bold</item>
        <item name="md_font_body">@font/raleway_medium</item>
        <item name="md_font_button">@font/raleway_semibold</item>
        <item name="md_ripple_color">@color/primary_custom_translucent</item>

        <item name="android:windowBackground">@android:color/black</item>
        <item name="button_color">#424242</item>
        <item name="md_background_color">#212121</item>
    </style>


    <style name="TextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/headerTitle</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/headerMarginStart</item>
        <item name="android:layout_marginTop">@dimen/headerMarginVertical</item>
        <item name="android:layout_marginBottom">@dimen/headerMarginVertical</item>
    </style>

    <style name="ContentButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_button_height</item>
        <item name="android:layout_marginTop">@dimen/content_button_spacing</item>
        <item name="android:textColor">?button_text_color</item>
        <item name="backgroundTint">?button_color</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Plex -->
    <style name="PlexBottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlexBottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_11</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <style name="PlayerSeekBar">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:maxHeight">@dimen/pixel_4dp</item>
        <item name="android:progressDrawable">@drawable/tubi_tv_seek_bar</item>
        <item name="android:minHeight">@dimen/pixel_4dp</item>
        <item name="android:thumb">@drawable/tubi_tv_drawable_scrubber_selector</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackground">#424242</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:background">@drawable/tv_auto_play_overlay</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="android:colorAccent">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textSize">16sp</item>
        <item name="textColorAlertDialogListItem">#b3b3b3</item>
        <item name="android:textColor">#e6e6e6</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme_Poke" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="H100">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#fff0f1f5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:alpha">0.9</item>
    </style>

</resources>