<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,OnClick,UsingOnClickInXml"
    tools:context=".MainShowActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="constraint_example_1"
            android:text="@string/learn_constraintLayout"
            app:cornerRadius="@dimen/cardview_default_radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showTelegram"
            android:tag="constraint_example_1"
            android:text="Telegrarm"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/cardview_default_radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showMaterialBuildShow"
            android:tag="constraint_example_1"
            android:text="Material Theme Show"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/cardview_default_radius" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>