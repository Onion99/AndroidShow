<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,OnClick,UsingOnClickInXml"
    tools:context=".MainShowActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <com.google.android.material.button.MaterialButton
            style="@style/ShowButtonStyle"
            android:onClick="show"
            android:tag="constraint_example_1"
            android:text="@string/learn_constraintLayout" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShowButtonStyle"
            android:onClick="showTelegram"
            android:text="@string/learn_code_view"/>

        <com.google.android.material.button.MaterialButton
            style="@style/ShowButtonStyle"
            android:onClick="showMaterialBuildShow"
            android:text="@string/learn_material"/>

        <com.google.android.material.button.MaterialButton
            style="@style/ShowButtonStyle"
            android:onClick="showCustomViewPage"
            android:text="@string/learn_custom_view"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>