<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidShow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MyTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyTheme.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MyTheme.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.MyTheme.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Theme.TMessages" parent="Theme.MaterialComponents.Light">
        <!--设置取消标题栏-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--设置Actionbar是否显示在内容上层 -->
        <item name="android:windowActionBarOverlay">false</item>
        <!--市面上的其他应用启动时,只有图片背景而没有白底或者黑底就是通过这个设置的-->
        <item name="android:windowContentOverlay">@null</item>
        <!--这个不只影响背景,还影响所有控件背景颜色 -->
        <item name="android:colorBackground">@android:color/white</item>
        <!-- 页面背景 https://blog.csdn.net/smartzzg/article/details/104788412-->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 标题栏Item -->
        <item name="android:itemTextAppearance">@style/ActionBar.Transparent.TMessages.Item</item>
        <item name="android:listViewStyle">@style/Theme.TMessages.ListView</item>
        <!-- 状态栏颜色 -->
        <item name="android:colorPrimaryDark">#33000000</item>
        <!-- AppBar的背景色-->
        <item name="android:colorPrimary">#527da3</item>
        <!-- 设置某些控制器激活时候的颜色（CheckBox，EditText的textSelectHandle，Switch），默认使用主题色中的colorAccent-->
        <item name="android:colorControlActivated">#808080</item>
        <!-- 被选中文字的底色 -->
        <item name="android:textColorHighlight">#60808080</item>
        <!-- 系统时间控件样式 -->
        <item name="android:alertDialogTheme">@style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:datePickerStyle">@style/Theme.TMessages.DatePicker</item>
        <item name="android:datePickerDialogTheme">@style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:timePickerStyle">@style/Theme.TMessages.TimePicker</item>
        <item name="android:timePickerDialogTheme">@style/Theme.TMessages.Dialog.Alert</item>
        <!-- 日历样式 https://www.jianshu.com/p/4cb42e6e5de3 -->
        <item name="android:calendarViewStyle">@style/Theme.TMessages.CalendarView</item>
        <!-- 底部导航栏的颜色 -->
        <item name="android:navigationBarColor">#000000</item>
        <!-- listview items style-->
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_ex</item>
        <!-- ActionBar https://www.bbsmax.com/A/gVdnEm275W/-->
        <!-- 每个溢出菜单item的样式  -->
        <item name="android:actionBarItemBackground">@drawable/bar_selector_style</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <!-- ActionBar 子Item 样式  -->
    <style name="ActionBar.Transparent.TMessages.Item" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ListView 样式 -->
    <style name="Theme.TMessages.ListView" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <!-- TimeWidget样式 -->
    <style name="Theme.TMessages.DayOfWeek" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="Theme.TMessages.CalendarView" parent="@android:style/Widget.Material.CalendarView">
        <item name="android:weekDayTextAppearance">@style/Theme.TMessages.DayOfWeek</item>
    </style>

    <style name="Theme.TMessages.DatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">#408bc8</item>
    </style>

    <style name="Theme.TMessages.TimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">#408bc8</item>
    </style>

    <style name="Theme.TMessages.Dialog.Alert" parent="android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">#4991cc</item>
        <item name="android:colorPrimary">#527da3</item>
        <item name="android:colorControlActivated">#808080</item>
    </style>

    <!-- TextView样式 http://dljz.nicethemes.cn/news/show-30328.html -->
    <!-- android:hyphenationFrequency：连词符的频率，“normal”：适用于聊天消息，“none”：没有连字符，“full”：标准连词符-->
    <style name="MyTextViewStyle" parent="android:Widget.Material.Light.TextView">
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
    </style>
</resources>